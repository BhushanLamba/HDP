        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settlement_reports_layout"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:background="@drawable/card_back"
